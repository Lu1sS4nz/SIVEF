<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Configuración</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/links/add">Inicio</a></li>
              <li class="breadcrumb-item active">Configuración</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <section class="col-lg-12 connectedSortable">
          <form action="/config/agregarDepto" method="post">
                <div class="card card-secondary">
                  <div class="card-header">
                    <h3 class="card-title">Nueva entrada</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-3">
                        <label>Código DANE</label><input type="text" name="codigoDane" class="form-control" placeholder="">
                      </div>
                      <div class="col-6">
                        <label>Descripción</label><input type="text" name="descripcionDep" class="form-control" placeholder="">
                      </div>
                    <div class="col-sm-3">
                      <!-- select -->
                      <div class="form-group">
                        <label>Select</label>
                        <select class="form-control" name="estado">
                          <option></option>                          
                          <option value="Activo">Activo</option>
                          <option value="Inactivo">Inactivo</option>
                        </select>
                      </div>
                    </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <button type="submit" class="btn btn-info float-right">Guardar</button>
                  </div>
                  <!-- /.card-body -->
                </div>
          </form>
          </section>
          <section class="col-lg-12 connectedSortable">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Listado</h3>
              </div>
                <div class="card-body">
                  <form action="/config/deptoViews" method="post">
                    <table id="example1" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>Código DANE</th>
                          <th>DESCRIPCIÓN</th>
                          <th>ESTADO</th>
                          <th>OPCIONES</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each depto}}
                          <tr>
                            <td>{{codigoDane}}</td>
                            <td>{{descripcionDep}}</td>
                            <td>{{estado}}</td>
                            <td>
                              <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#modal-lg{{iddepartamento}}">Editar</button>
                              <a href="/config/eliminarDepto/{{iddepartamento}}" class="btn btn-outline-danger">Eliminar</a>
                            </td>
                          </tr>

                            <div class="modal fade" id="modal-lg{{iddepartamento}}" aria-hidden="true">
                              <div class="modal-dialog modal-lg">
                                  <div class="modal-content">
                                      <div class="modal-header">
                                          <h4 class="modal-title">Large Modal</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                      </div>
                                      <div class="modal-body">          
                                        <form action="/config/modificarDepto/{{iddepartamento}}" method="post">
                                            <div class="card-body">
                                              <div class="row">
                                                <div class="col-3">
                                                  <label>Código DANE</label><input type="text" value="{{codigoDane}}" name="codigoDane" class="form-control" placeholder="">
                                                </div>
                                                <div class="col-6">
                                                  <label>Descripción</label><input type="text" value="{{descripcionDep}}" name="descripcionDep" class="form-control" placeholder="">
                                                </div>
                                                  <div class="col-sm-3">
                                                    <!-- select -->
                                                    <div class="form-group">
                                                      <label>Select</label>
                                                      <select class="form-control" name="estado">
                                                        <option value="{{descripcionDep}}"></option>                          
                                                        <option value="Activo">Activo</option>
                                                        <option value="Inactivo">Inactivo</option>
                                                      </select>
                                                    </div>
                                                  </div>
                                              </div>
                                            </div>
                                          <button type="button" class="btn btn-default float-right" data-dismiss="modal">Cerrar</button>
                                          <button type="submit" class="btn btn-primary float-right" >Guardar</button>
                                        </form>
                                      </div>
                                  </div>
                                  <!-- /.modal-content -->
                              </div>
                            </div>
                        {{/each}}
                      </tbody>
                    </table>
                  </form>
                </div>
            </div>
          </section>
        </div>
      </div>
    </section>
  </div>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
</div>
</body>