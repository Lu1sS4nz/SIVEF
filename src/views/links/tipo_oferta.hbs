<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Tipo de Oferta</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/links/tipo_oferta">Inicio</a></li>
              <li class="breadcrumb-item active">Configuración</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <section class="col-lg-12 connectedSortable">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Nuevo Tipo de Oferta</h3>
              </div>
              <div class="container p-1">
                <div class="row">
                  <div class="card-body" >
                    <form action="" method="POST">
                        <div class="form-group">
                          <div class="row">
                            <div class="col">
                              <input type="text" name="tipoOferta" class="form-control" placeholder="Tipo de Oferta" aria-label="Tipo Rol" autofocus>
                            </div>
                            <div class="col">
                              <input type="text" name="descripcion" class="form-control" placeholder="Descripción" aria-label="Descripcion" >
                            </div>
                          </div>
                          <div class="col-sm-06">
                                  <label for=""></label>
                                  <select name="estado" class="form-control">
                                    <option selected>Elergir Estado...</option>
                                    <option value="1">Activo</option>
                                    <option value="2">Inactivo</option>
                                  </select>
                            </div>
                        </div>                        
                        <div class="card-footer">
                          <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>
                  </div>
                </div>
              </div>  
              <!-- /.card-body -->
            </div>
          </section>
          <section class="col-lg-12 connectedSortable">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Listado</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>Tipo de Oferta</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each tipo_oferta}}
                              <tr>
                                  <td>{{idTipoOferta}}</td>
                                  <td>{{tipoOferta}}</td>
                                  <td>{{descripcion}}</td>
                                  <td>{{estado}}</td>
                                  <td>
                                    <div class="container">
                                        <div class="table-data-feature">
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#modificarp{{id}}" data-toggle="tooltip" data-placement="top" title="Edit">
                                                
                                            </button>
                                            <button class="btn btn-danger" data-toggle="modal" data-target="#eliminarp{{id}}"  data-toggle="tooltip" data-placement="top" title="Delete">
                                                
                                            </button>
                                        </div>
                                    </div>
                                  </td>
                              </tr>
                          {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
          </section>
        </div>
      </div>
    </section>
  </div>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
</div>
</body>